{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": false,
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/components/**/*"
  ]
}